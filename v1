FILE: js/main.js
```javascript
// Main JS for small static site
(function(){
  // set years
  var y = new Date().getFullYear();
  ['year','year2','year3','year4'].forEach(function(id){ var el = document.getElementById(id); if(el) el.textContent = y; });

  // simple nav active highlight (optional)
  var path = location.pathname.split('/').pop() || 'index.html';
  document.querySelectorAll('.main-nav a').forEach(function(a){
    if(a.getAttribute('href') === path) a.classList.add('active');
  });

  // CONTACT FORM (EmailJS integration)
  var form = document.getElementById('contactForm');
  if(!form) return;

  // === CONFIGURE THESE VALUES ===
  // Sign up at https://www.emailjs.com/ and create a Service and Email Template.
  // Replace the placeholders below with your EmailJS user ID, service ID and template ID.
  var EMAILJS_USER_ID = 'YOUR_USER_ID'; // e.g. user_xxx
  var EMAILJS_SERVICE_ID = 'YOUR_SERVICE_ID'; // e.g. service_xxx
  var EMAILJS_TEMPLATE_ID = 'YOUR_TEMPLATE_ID'; // e.g. template_xxx

  // Map reason => recipient email address (replace with your real addresses)
  var ROUTING = {
    clients: 'clients@peakhire.example',
    candidates: 'candidates@peakhire.example',
    students: 'students@peakhire.example',
    general: 'info@peakhire.example'
  };

  // initialize EmailJS if keys present
  if(window.emailjs && EMAILJS_USER_ID !== 'YOUR_USER_ID'){
    emailjs.init(EMAILJS_USER_ID);
  }

  form.addEventListener('submit', function(e){
    e.preventDefault();
    var status = document.getElementById('formStatus');
    status.textContent = 'Sending...';

    var data = {
      name: form.name.value,
      email: form.email.value,
      phone: form.phone.value,
      reason: form.reason.value,
      message: form.message.value,
      // include a 'to_email' field to allow template to route
      to_email: ROUTING[form.reason.value] || ROUTING.general
    };

    // Option 1: EmailJS (client-side)
    if(window.emailjs && EMAILJS_USER_ID !== 'YOUR_USER_ID'){
      // Your EmailJS template should accept: name, email, phone, reason, message, to_email
      emailjs.send(EMAILJS_SERVICE_ID, EMAILJS_TEMPLATE_ID, data)
        .then(function(){ status.textContent = 'Message sent. Thank you!'; form.reset(); })
        .catch(function(err){ console.error(err); status.textContent = 'Failed to send message. Try again later.'; });
      return;
    }

    // Option 2: Fallback to mailto (opens user's email client) — simple fallback
    try{
      var mailto = 'mailto:' + encodeURIComponent(ROUTING[form.reason.value] || ROUTING.general)
        + '?subject=' + encodeURIComponent('Website enquiry: ' + form.reason.value)
        + '&body=' + encodeURIComponent('Name: ' + data.name + '\nEmail: ' + data.email + '\nPhone: ' + data.phone + '\n\n' + data.message);
      window.location.href = mailto;
      status.textContent = 'Opened email client. If nothing happened, please email us directly.';
      form.reset();
    }catch(e){ status.textContent = 'Could not open email client. Please email us directly.'; }
  });

  // === Alternative: Netlify forms
  // If you deploy to Netlify and want to use Netlify Forms instead of EmailJS, add the attribute
  // `netlify` and `name="contact"` to the <form> tag, and remove the EmailJS scripts. See Netlify docs.

})();
```

